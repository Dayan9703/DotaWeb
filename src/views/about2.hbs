<div style="background: #010101;">
    <p class="topname">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Torneo en proceso</p>
</div>
<div class="div1 container text-center">
    <section class="div2 rounded row">
        <img src="/img/calendario.jpg" alt="" class="mx-auto d-block m-4 responsive">
    </section>

    <section>
        <div class="table-wrapper">
            <table class="table table-hover table-dark">

                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Fechas</th>
                        <th scope="col">Team1</th>
                        <th scope="col">Team2</th>
                        {{#if user}}
                        {{#each user}}
                        {{#ifCond this.userType '==' 'userA'}}
                        <th scope="col">Edit</th>
                        <th scope="col">Delete</th>
                        {{/ifCond}}
                        {{/each}}
                        {{/if}}

                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{fecha}}</td>
                        <td>{{equipo1}}</td>
                        <td>{{equipo2}}</td>

                        <td><a href="fechas/edit/{{id}}" class="btn btn-success "><i class="fa fa-pencil"></i></a></td>
                        <td>
                            <form action="/fechas/delete/{{_id}}?_method=DELETE" method="POST">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-block btn-sn"
                                    onclick="return confirmacion()"><i class="fa fa-trash"></i></button>
                            </form>
                        </td>

                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </section>

</div>
</div>