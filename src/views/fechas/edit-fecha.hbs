<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Editar Equipo</h3>
            </div>
            <div class="card-body">
                <form action="/fechas/edit/{{fechaEdit.id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <p>Fecha</p>
                        <input type="text" name="fecha" class="form-control" value="{{fechaEdit.fecha}}">
                    </div>
                    <div class="form-group">
                        <p>Team 1</p>
                        <input type="text" name="equipo1" class="form-control" value="{{fechaEdit.equipo1}}">
                    </div>
                    <div class="form-group">
                        <p>Team 2</p>
                        <input type="text" name="equipo2" class="form-control" value="{{fechaEdit.equipo2}}">
                    </div>
                    <button class="btn btn-primary btn-block" id="btn">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>