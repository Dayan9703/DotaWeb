<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card text-center">
            <div class="card-header">
                <h3>Editar Equipo</h3>
            </div>
            <div class="card-body">
                <form action="/fechas/new-fecha" method="POST" id="form" class="form">
                    <div class="form-group">
                        <input type="text" class="form-control" name="fecha" id="fecha" placeholder="Fecha" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="equipo1" id="equipo1" placeholder="Team 1" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" name="equipo2" id="equipo2" placeholder="Team 2" required>
                    </div>
                    <button class="btn btn-primary btn-block" id="btn">Crear</button>
                </form>
            </div>
        </div>
    </div>
</div>