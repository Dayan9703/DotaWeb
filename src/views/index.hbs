<b3>BIENVENIDOS A</b3>
<div class="container2">
    <span style="--l: 'l';">COLISEUM &nbsp </span>
    <span style="--l: '0!';">CHAMPIONS</span>

{{#ifCond user.userType '==' 'userA'}}
<form action="/storage2/" method="POST" enctype="multipart/form-data">
    <div style="margin: 5px;">
        <input type="file" name="calendario" class="btn btn-link">
    </div>
    <div style="margin: 5px;">
        <input type="submit" value="Cambiar Calendario" class="btn btn-primary">
    </div>
</form>
{{/ifCond}}

<div class="">
    <img src="/img/principal.jpg" alt="" class="mx-auto d-block m-4 responsive rounded-lg">
</div>

<div style="background: #343a40!important" class="rounded b2">
    <b class="">Noticias</b>
</div>
<div class="row">
    {{#each notes}}
    <div1 class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}
                </h4>
                <p>{{description}}</p>
            </div>
        </div>
    </div1>
    {{/each}}
</div>